{
  "manifest_version": 3,
  "name": "Lazy Egg JS Watcher Enhanced",
  "version": "5.1",
  "description": "Advanced JavaScript monitoring with endpoint extraction, secret detection, domain categorization, and security analysis.",
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Lazy Egg JS Watcher Enhanced",
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "modules/linkfinder-lite.js",
        "modules/secret-detector.js",
        "modules/domain-categorizer.js",
        "modules/domain-snapshot.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}

