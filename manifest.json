{
  "manifest_version": 3,
  "name": "Lazy Egg JS Watcher",
  "version": "4.0",
  "description": "Advanced JavaScript URL monitor and analyzer with export capabilities.",
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Lazy Egg JS Watcher",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

